<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main_next">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    <ImageView
            android:src="@drawable/top1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/NextImage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.144" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.486" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"/>
    <TextView
            android:text="ABOUT US"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h1text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/message" android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.477" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:textAlignment="center"
            android:fontFamily="serif" android:textScaleX="1.35"/>
    <TextView
            android:text="Meteor とは"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h2text" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/NextImage" android:textSize="36sp" android:fontFamily="serif"
            android:textScaleX="1.15" android:textAlignment="center"/>
    <TextView
            android:layout_width="319dp"
            android:layout_height="163dp"
            android:id="@+id/h3text" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/h2text" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view" android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias="0.033" android:textSize="24sp" android:textAlignment="center"
            android:text="流れ星という意味。 TMRevolutionのこの題名の曲が好きなためこの名前に。"/>

</androidx.constraintlayout.widget.ConstraintLayout>